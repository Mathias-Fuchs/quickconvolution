cmake_minimum_required(VERSION 3.1)
project(quickconv)

if(WIN32)
   find_package(glfw3 CONFIG REQUIRED)
else()
find_package(PkgConfig REQUIRED)
pkg_search_module(GLFW REQUIRED glfw3)
endif()

find_package(OpenGL REQUIRED)

include_directories(
${GLFW_INCLUDE_DIRS}
${OPENGL_INCLUDE_DIRS}
)

add_executable(quickconv
glad/src/gl.c
src/main.cpp
)

target_include_directories(quickconv PRIVATE
glad/include
)

target_link_libraries(quickconv
${GLFW_LIBRARIES}
)

